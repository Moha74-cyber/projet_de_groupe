{% extends 'base.html.twig' %}

{% block title %}Conseil{% endblock %}

{% block body %}
    <h1>Conseil</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ conseil.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ conseil.description }}</td>
            </tr>
            <tr>
                <th>DatePublication</th>
                <td>{{ conseil.datePublication ? conseil.datePublication|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>NombreVue</th>
                <td>{{ conseil.nombreVue }}</td>
            </tr>
            <tr>
                <th>Publi√© par :</th>
                <td>{{ conseil.user }}</td>
            </tr>
            <tr>
                {# <th>Photo</th> #}
                {% if conseil.photo %}
                <img src="{{ conseil.photo }}" alt="{{ conseil.titre }}" class="img-fluid" />
                {% endif %}
            </tr>
        </tbody>
    </table>


    <div>
        <h2>commentaire</h2>
        {% for avi in avis %}
            <div>avis : {{avi.text}}</div>
            <div>note : {{avi.note}}</div>
            {% if username == avi.user or is_granted('ROLE_ADMIN') %}
                <!-- <a href="{{path('avis_delete',{'id': avi.id}) }}" class="btn btn-danger">X</a> -->
                {{ include('avis/_delete_form.html.twig', {'button_label': 'X'}) }}
            {% endif %}
        {% endfor %}
    </div>

    <a class="btn btn-info" href="javascript:history.back()">retour</a>

    <a class="btn btn-info" href="{{ path('avis_new', {'id' : conseil.id}) }}">Faire un commentaire</a>

    {% if username == conseil.user or is_granted('ROLE_ADMIN') %}
        <a class="btn btn-warning" href="{{ path('conseil_edit', {'id': conseil.id}) }}">Modifier</a>

        {{ include('conseil/_delete_form.html.twig') }}
    {% endif %}



    
{% endblock %}
