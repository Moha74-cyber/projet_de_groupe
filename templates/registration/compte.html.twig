{% extends 'base.html.twig' %}

{% block title %}Mon Compte{% endblock %}

{% block body %}

<div >
    <h1>{{ user.nom|capitalize }} {{ user.prenom|capitalize }}</h1>

    <div class="text-center">
        {% if user.photo %}
            <img src="{{user.photo}}" id="imgTable_Samm" alt="{{ user.nom }}">
        {% else %}
            <img src="{{asset("img/avatar-neutre.png")}}" class="img-fluid" alt="pas de photo">
        {% endif %}
    </div>

   <div class="d-flex justify-content-between">
        <a href="{{ path('app_edit', {'id': user.id}) }}" class="btn btn-info"> editer mes informations</a>
    
        <a href="{{ path('app_annonce', {'id': user.id}) }}" class="btn btn-info">Mes annonces</a>
        <a href="{{ path('app_conseil', {'id': user.id}) }}" class="btn btn-info">Mes conseils</a>  
   </div>
   
{% endblock %}
