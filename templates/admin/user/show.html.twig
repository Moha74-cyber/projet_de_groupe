{% extends 'admin/admin.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <!-- <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr> -->
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ user.mail }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>
                    {% if user.photo %}
                        <img src="{{ user.photo }}" alt="{{ user.username }}" class="img-fluid w-25" />
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-info" href="javascript:history.back()">retour</a>


    <a href="{{ path('admin_user_edit', {'id': user.id}) }}">edit</a>

    {{ include('/admin/user/_delete_form.html.twig') }}
{% endblock %}
