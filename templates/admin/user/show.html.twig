{% extends 'admin/admin.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
    <h1>Utilisateurs</h1>

    <table class="table">
        <tbody>
            <tr>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <!-- <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr> -->
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>E-mail</th>
                <td>{{ user.mail }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>
                    {% if user.photo %}
                        <img src="{{ user.photo }}" alt="{{ user.username }}" class="img-fluid w-25" />
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-info" href="javascript:history.back()">Retour</a>


    <a href="{{ path('admin_user_edit', {'id': user.id}) }}">Modifier</a>

    {{ include('/admin/user/_delete_form.html.twig') }}
{% endblock %}
